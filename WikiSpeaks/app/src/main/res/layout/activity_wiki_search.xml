<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wizards.future.wikispeaks.wizards.future.wikispeaks.activities.WikiSearchActivity"
    android:onClick="searchButtonHandler"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/searchButton"
        android:background="@mipmap/ic_launcher"
        android:onClick="searchButtonHandler"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginBottom="147dp"
        android:layout_above="@+id/searchButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/searchButton" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/goButton"
        android:layout_alignBottom="@+id/editText"
        android:background="@drawable/wikispeaksstart2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText" />
</RelativeLayout>
