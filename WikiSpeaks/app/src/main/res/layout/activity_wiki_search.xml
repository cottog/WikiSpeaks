<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wizards.future.wikispeaks.wizards.future.wikispeaks.activities.WikiSearchActivity"
    android:onClick="searchButtonHandler"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="132dp"
        android:id="@+id/randomButton"
        android:background="@drawable/random"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:onClick="randomButtonHandler" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginBottom="147dp"
        android:layout_above="@+id/randomButton"
        android:layout_alignEnd="@+id/randomButton"
        android:layout_alignStart="@+id/randomButton"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/goButton"
        android:layout_alignBottom="@+id/editText"
        android:background="@drawable/button_selector"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText"
        android:onClick="searchButtonHandler" />
</RelativeLayout>
